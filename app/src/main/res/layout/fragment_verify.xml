<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        style="?android:progressBarStyleLarge"
        android:id="@+id/verify_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/verify_linearLayout"
        android:layout_width="362dp"
        android:layout_height="379dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1"
        tools:layout_editor_absoluteY="3dp">


        <TextView
            android:id="@+id/verify_titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.41"
            android:gravity="center"
            android:text="Verify Your Account"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/verify_codeField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"
            android:ems="10"
            android:hint="Code"
            android:inputType="number"
            android:textSize="36sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/verify_submitCodeButton"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Submit Code"
            android:textColor="?android:attr/textColorPrimary" />

        <TextView
            android:id="@+id/verify_submitCodeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08"
            android:gravity="center"
            android:text="We sent a code to you. Enter it above to verify your account."
            android:textSize="14sp" />

        <TextView
            android:id="@+id/verify_msgText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.10"
            android:gravity="center" />

        <Button
            android:id="@+id/verify_resendButton"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:text="Resend"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Didn't get the code? Press the button below and we will resend it." />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:gravity="center_horizontal" />

    </LinearLayout>
</FrameLayout>