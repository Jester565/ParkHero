<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rowride_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#660000"
        android:layout_margin="10px">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rowride_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_cancel_black_24dp"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/rowride_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/rowride_img"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="#222222"
            android:text="Astro Orbiter"/>
        <!--
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/rowride_name"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/rowride_img"
            android:gravity="center">
            <TextView
                android:id="@+id/rowride_waittime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:text="120 min" />
            <android.support.v4.widget.Space
                android:layout_width="50dp"
                android:layout_height="4dp" />
            <TextView
                android:id="@+id/rowride_fastpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dp"
                android:text="1:30 pm" />
        </LinearLayout>
        -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rowride_img"
            android:layout_below="@+id/rowride_name"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/rowride_waittime"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/rowride_space"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#222222"
                android:text="120 min" />
            <TextView
                android:id="@+id/rowride_space"
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:textColor="#222222"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/rowride_fastpass"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/rowride_space"
                android:gravity="center"
                android:textColor="#222222"
                android:textSize="20dp"
                android:text="1:30 pm" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>