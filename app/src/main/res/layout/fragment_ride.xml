<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ride.RideFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/camera_picturebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:src="@drawable/ic_info_outline_black_24dp"
            app:elevation="4dp"
            android:layout_centerHorizontal="true"
            app:fabSize="mini"
            android:scaleType="center"
            app:rippleColor="@color/colorPrimaryDark"/>
        <ImageView
            android:id="@+id/ride_img"
            android:layout_width="match_parent"
            android:minHeight="220dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/ride_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_below="@+id/ride_img"
            android:layout_centerHorizontal="true"
            android:text="Space Mountain" />

        <RelativeLayout
            android:id="@+id/ride_waitLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ride_name"
            android:layout_margin="15dp">
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/ride_waitMins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50dp"
                android:text="30"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ride_waitMins"
                android:textSize="20dp"
                android:text="Minute Wait" />
        </RelativeLayout>
        <View
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="#44000000"
            android:layout_alignTop="@+id/ride_waitLayout"
            android:layout_alignBottom="@+id/ride_waitLayout"
            android:layout_toRightOf="@+id/ride_waitLayout"/>
        <RelativeLayout
            android:id="@+id/ride_timeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/ride_waitLayout"
            android:layout_alignBottom="@+id/ride_waitLayout"
            android:layout_toRightOf="@+id/ride_waitLayout"
            android:layout_marginVertical="5dp">
            <RelativeLayout
                android:id="@+id/ride_fpLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FastPasses For"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:layout_above="@+id/ride_fpText"/>
                <TextView
                    android:id="@+id/ride_fpText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="27dp"
                    android:text="1:15 AM - 2:15 AM"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Are Being Distributed"
                    android:textSize="16dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/ride_fpText"/>
            </RelativeLayout>
            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="No More FastPasses"
                android:textSize="23dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        <View
            android:layout_marginVertical="10dp"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#44000000"
            android:layout_below="@+id/ride_timeLayout"/>
        <RelativeLayout
            android:id="@+id/ride_ratingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ride_timeLayout">
            <TextView
                android:id="@+id/ride_waitRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="40dp"
                android:text="8.2"/>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ride_waitRating"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:text="Wait Rating" />
        </RelativeLayout>
        <View
            android:layout_marginVertical="10dp"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#44000000"
            android:layout_below="@+id/ride_ratingLayout"/>
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/ride_waitTimeChart"
            android:visibility="gone"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/ride_ratingLayout">

        </com.github.mikephil.charting.charts.LineChart>
        <ProgressBar
            android:id="@+id/ride_graphProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ride_ratingLayout"
            android:layout_marginVertical="30dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/ride_nodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ride_ratingLayout"
            android:layout_marginTop="45dp"
            android:text="No Data For This Ride"/>
    </RelativeLayout>
</ScrollView>