<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/MaterialRed"
    tools:context="com.dis.ajcra.distest2.ride.RideTimesFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ridelist_swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/ridelist_recycler"
            android:layout_width="match_parent"
            android:layout_marginTop="44dp"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/ridelist_navigatebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:paddingVertical="4dp"
        android:background="#CFFF0000">
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/ridelist_scheduleButton"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_today_black_24dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:adjustViewBounds="true"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/ridelist_passButton"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_credit_card_black_24dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:adjustViewBounds="true"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/ridelist_timeButton"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_access_time_black_24dp"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:adjustViewBounds="true"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ridelist_createfilterbar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:paddingVertical="4dp"
        android:background="#CF000055">
        <ImageButton
            android:id="@+id/ridelist_cancelfiltercreation"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:src="@drawable/ic_clear_black_24dp"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:adjustViewBounds="true"/>
        <EditText
            android:id="@+id/ridelist_filtername"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:textSize="18dp" />
        <ImageButton
            android:id="@+id/ridelist_createfilter"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:src="@drawable/ic_add_white_24dp"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:adjustViewBounds="true"
            android:alpha="0.2"
            android:enabled="false"/>
    </LinearLayout>
    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ridelist_filterslider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoPanelHeight="0dp"
        sothree:umanoShadowHeight="0dp"
        sothree:umanoOverlay="true">
        <LinearLayout
            android:id="@+id/ridelist_filterTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FA990000"
            android:id="@+id/ridelist_filterlayout">
            <android.support.design.chip.ChipGroup
                android:id="@+id/ridelist_filterchips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp">
            </android.support.design.chip.ChipGroup>
            <LinearLayout
                android:id="@+id/ridelist_filtereditbar"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:paddingVertical="4dp"
                android:background="#FA990000">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/ridelist_editfilter"
                    android:src="@drawable/edit_icon"
                    app:elevation="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/ridelist_cancelfilter"
                    android:src="@drawable/ic_clear_black_24dp"
                    app:elevation="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/ridelist_deletefilter"
                    android:src="@drawable/ic_delete_white_24dp"
                    app:elevation="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:paddingVertical="4dp"
                android:background="#FA990000">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <Spinner
                    android:id="@+id/ridelist_sortspinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <Switch
                    android:id="@+id/ridelist_sortswitch"
                    android:checked="true"
                    android:textOn="A"
                    android:textOff="D"
                    android:showText="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ridelist_filterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_filter_list_black_24dp"
        android:layout_margin="16dp" />
</RelativeLayout>
