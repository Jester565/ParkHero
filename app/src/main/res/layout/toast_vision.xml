<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/toastvis_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#BBFF0000"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/toastvis_img"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:background="@drawable/img_back"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/toastvis_img"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/toastvis_text"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="988888888888888888"
            android:textSize="16dp"
            android:textColor="#000000"/>
        <Button
            android:id="@+id/toastvis_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:text="Add Pass"
            android:textColor="#000000"
            android:src="@drawable/ic_check_black_24dp"
            android:layout_below="@+id/toastvis_text"
            android:backgroundTint="#FF0000"/>
        <ProgressBar
            android:id="@+id/toastvis_loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>