<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/colorPrimaryDark">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF0000">
        <LinearLayout
            android:id="@+id/rowentity_proflayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rowentity_profimgview"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_cancel_black_24dp"/>
            <TextView
                android:id="@+id/rowentity_profname"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="Owner"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/rowentity_imgview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_below="@+id/rowentity_proflayout"
            android:adjustViewBounds="true"
            android:maxHeight="350dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_send_black_24dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/rowentity_play"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_play_circle_outline_black_24dp"
                android:tint="#FF0000"
                android:alpha=".5"
                android:background="@android:color/transparent"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>