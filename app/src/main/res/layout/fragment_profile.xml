<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dis.ajcra.distest2.ProfileFragment">

    <ImageView
        android:id="@+id/profile_profimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/profile_profimg"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_below="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/profile_acceptButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00EE00"
            android:shadowRadius=".1"
            android:shadowColor="#AA0000"
            android:layout_centerVertical="true"
            android:textSize="22dp"
            android:layout_marginVertical="10dp"
            android:padding="5dp"/>

        <Button
            android:id="@+id/profile_declineButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#EE0000"
            android:shadowRadius=".1"
            android:shadowColor="#AA0000"
            android:layout_below="@+id/profile_acceptButton"
            android:textSize="22dp"
            android:layout_centerVertical="true"
            android:layout_marginVertical="10dp"
            android:padding="5dp"
            />
    </RelativeLayout>
</RelativeLayout>
